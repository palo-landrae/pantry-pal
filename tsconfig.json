{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": false,
    "baseUrl": "./",
    "paths": {
      "@/auth/*": [
        "src/auth/*"
      ],
      "@/lib/*": [
        "src/lib/*"
      ],
      "@/types/*": [
        "src/types/*"
      ],
      "@/screens/*": [
        "src/screens/*"      
      ],
      "@/api/*": [
        "src/api/*"
      ],
      "@/components/*": [
        "src/components/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
